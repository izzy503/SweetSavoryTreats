@{
  Layout = "_Layout";
}

@using SweetSavoryTreats.Models;

<h1>Treats Owned by @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
}

<ul>
  @foreach (Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
  }
</ul>

<p>@Html.ActionLink("Create a New Treat", "Create")</p>
<p>@Html.ActionLink("Return to Home", "Index", "Home")</p>
