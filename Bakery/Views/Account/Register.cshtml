@{
  Layout = "_Layout";
}

@using SweetSavoryTreats.ViewModels

@model RegisterModels


<h2>Register an Account</h2>
<hr />

@if (!ViewData.ModelState.IsValid)
{
  @Html.ValidationSummary("Please correct the following errors and then proceed:")
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  @Html.LabelFor(user => user.FullName)
  @Html.TextBoxFor(user => user.FullName, new { placeholder = "Your full name" })

  <label>Username:</label>
  @Html.TextBoxFor(user => user.DisplayName, new { placeholder = "Username" })

  @Html.LabelFor(user => user.Email)
  @Html.TextBoxFor(user => user.Email, new { placeholder = "Your email address" })

  @Html.LabelFor(user => user.Password)
  @Html.EditorFor(user => user.Password, new { placeholder = "Choose a secure password" })

  @Html.LabelFor(user => user.ConfirmPassword)
  @Html.EditorFor(user => user.ConfirmPassword, new { placeholder = "Re-enter your password" })

  <input type="submit" value="Register Now" />
}

<p>@Html.ActionLink("Go back to Accounts", "Index")</p>
